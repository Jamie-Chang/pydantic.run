{
  "name": "logfire.run",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "format": "prettier --write -- .",
    "lint": "prettier --check -- . && tsc --noEmit",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all",
    "tabWidth": 2,
    "printWidth": 119,
    "bracketSpacing": true,
    "plugins": [
      "prettier-plugin-toml"
    ]
  },
  "dependencies": {
    "ansi-to-html": "^0.7.2",
    "monaco-editor": "^0.52.2",
    "prettier": "^3.4.2",
    "prettier-plugin-toml": "^2.0.1",
    "pyodide": "^0.27.1",
    "typescript": "~5.6.2",
    "vite": "^6.0.5",
    "vite-plugin-static-copy": "^2.2.0"
  }
}
